{
  "name": "news-analyzer",
  "version": "1.0.0",
 
"type": "module", "scripts": {
    ""kill-ports": "lsof -t -i:3000 | xargs -r kill -9 && lsof -t -i:5173 | xargs -r kill -9 || true",",
    "dev": "npm run kill-ports && concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "vite",
    "start:server": "tsc && node dist/server/server.js",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0"
  }
}
