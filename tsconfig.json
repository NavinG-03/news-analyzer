{
       "compilerOptions": {
         "target": "ESNext",
         "module": "ESNext",
         "moduleResolution": "node",
         "outDir": "./dist",
         "rootDir": "./src",
         "strict": true,
         "esModuleInterop": true,
         "skipLibCheck": true,
         "jsx": "react-jsx",
         "baseUrl": "src",
         "paths": {
           "@/*": ["client/*"],
           "@/components/*": ["client/components/*"],
           "@/services/*": ["client/services/*"]
         },
         "types": ["node", "react", "react-dom"]
       },
       "include": ["src/**/*"],
       "exclude": ["node_modules", "dist"]
     }
