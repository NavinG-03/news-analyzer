{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",              // Changed to 'src' for better directory structure
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],            // 'server.ts' isn't necessary if it's in 'src'
  "exclude": ["node_modules"]
}
